extends _layout
include ../utils/mixins

block buttons
  a.btn.btn-success(href="/admin/applicant") 返回管理页

block content
  br
  form.form-horizontal(action="/admin/applicant/create" method="POST" enctype="multipart/form-data")
    input(type="hidden" name="_csrf" value=csrfToken)
    .row
      hr
      ul
        li 红色标签项为必填项
      hr
    .row
      .col-md-4.col-md-offset-1
        //- mixin field(_label, _for, _type, _name, _id, _class)
        +field('姓名', 'text', 'name', 'name', '')
        +field('身份证号', 'text', 'idno', 'idno', '')
        +field('电话', 'text', 'tel', 'tel', '')
        //- +field('备注', 'remarks', 'text', 'remarks', 'remarks', '')

      .col-md-4.col-md-offset-2
        +fileField('认证附件', 'file', 'attachments', 'attachments', 'essential')
        +fileField('作品合影', 'file', 'photos', 'photos', 'essential')
    br
    .row
      .col-md-4.col-md-offset-4
        button.btn.btn-primary.col-xs-12(type="submit") 下一步

