extends _layout
include ../utils/mixins

block buttons
  a.btn.btn-success(href="/admin/doc") 返回管理页
block content
  br
  form.form-horizontal(action="/admin/doc/create" method="POST" enctype="multipart/form-data")
    input(type="hidden" name="_csrf" value=csrfToken)
    .row
      hr
      ul
        li 红色标签项为必填项
      hr
    .row
      .col-md-4.col-md-offset-1
        //- mixin field(_label, _for, _type, _name, _id, _class)
        +fileField('全景图', 'file', 'fullview', 'fullview', 'essential')
        +fileField('预览图', 'file', 'preview', 'preview', 'essential')
        +fileField('纸纹图', 'file', 'magnifyview', 'magnifyview', 'essential')
        +field('镜头倍数', 'text', 'zoom', 'zoom', '')
        +field('备注', 'text', 'remarks', 'remarks', '')
      .col-md-5.col-md-offset-1
        br
        .col-xs-6.col-md-6
          h4 预览图
          canvas#previewCanvas(style="width: 160px; height: 160px; box-shadow: 0 0 1px 0 grey;").img-responsive

        .col-xs-6.col-md-6
          h4 纸纹图
          canvas#magnifyCanvas(style="width: 160px; height: 160px; box-shadow: 0 0 1px 0 grey;").img-responsive

    br
    .row
      .col-md-4.col-md-offset-4
        button.btn.btn-primary.col-xs-12(type="submit") 下一步

