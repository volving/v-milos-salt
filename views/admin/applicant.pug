extends _layout

block buttons
  a(href="/admin/applicant/create").btn.btn-success 新建纸纹档案

block content
  br
  if applicants && applicants.length > 0
    each item in applicants
      .panel.panel-default
        .panel-heading
          a(href="#")
            i.glyphicon.glyphicon-pencil &nbsp;
            = item.name
        .panel-body
          .row
            .col-xs-6.col-md-3
              p.bg-info 身份证号
            .col-xs-6.col-md-3
              p= item.idno
            .col-xs-6.col-md-3
              p.bg-info 电话
            .col-xs-6.col-md-3
              p= item.tel
            .col-xs-12
              p.bg-info 认证附件
            each att in item.attachments
              .col-xs-6.col-md-6
                -var url = '/uploads/' + att
                img(src=url, alt="").img-responsive
            .col-xs-12
              p.bg-info 作品合影
            each pho in item.photos
              .col-xs-6.col-md-6
                -var url = '/uploads/' + pho
                img(src=url, alt="").img-responsive