extends _layout

block buttons
  a(href="/admin/artwork/create").btn.btn-success 新建艺术品档案
  //- | &nbsp;

block content
  br
  if artworks && artworks.length > 0
    each item in artworks
      .panel.panel-default
        .panel-heading
          a(href="#")
            i.glyphicon.glyphicon-pencil &nbsp;
            = item.name


        .panel-body
          .row
            .col-xm-3.col-md-1
              p.bg-info 标题
            .col-xm-3.col-md-2
              p= item.title
            if item.artist
              .col-xm-3.col-md-1
                p.bg-info 作者
              .col-xm-3.col-md-2
                p= item.artist.name
            if item.coartist
              .col-xm-3.col-md-1
                p.bg-info 协作者
              .col-xm-3.col-md-2
                p= item.coartist.name
            .col-xm-3.col-md-1
              p.bg-info 分类
            .col-xm-3.col-md-2
              p= item.category
            .col-xm-3.col-md-1
              p.bg-info 时代
            .col-xm-3.col-md-2
              p= item.times
            .col-xm-12.col-md-12
              p.bg-info 尺寸
            .col-xm-12.col-md-12
              p= item.size
            .col-xm-12.col-md-12
              p.bg-info 三真链接
            .col-xm-12.col-md-12
              p= item.url