extends ../layout

mixin inputField(_label, _for, _type, _name, _id, _class)
  .col-xs-12.col-sm-6
    .form-group
      label.col-md-3.control-label(for=_for) #{_label}
      .col-md-9
        input.form-control(class=_class, id=_id, type=_type, name=_name)

block body
  #agent.container
    h1.text-center 网点信息维护
    br
  .container
    form.form-horizontal(action="/agent/create" role="form" method="POST")
      .row
        input(type="hidden" name="_csrf" value=csrfToken)
        +inputField('联系人', 'manager', 'text', 'manager', 'manager', '')
        +inputField('联系人电话', 'managerTel', 'tel', 'managerTel', 'managerTel', '')
        +inputField('合作机构名称', 'name', 'text', 'name', 'name', '')
        +inputField('地址', 'address', 'text', 'address', 'address', '')
        +inputField('办公电话', 'tel', 'tel', 'tel', 'tel', '')
        +inputField('邮箱', 'email', 'email', 'email', 'email', '')
        +inputField('营业时间', 'business_hours', 'text', 'business_hours', 'business_hours', '')
      .row
        .form-group
          .col-xs-12.col-sm-12.col-md-4.col-md-push-4
            button#submit.btn.btn-primary.col-xs-12(type="submit") 提交
