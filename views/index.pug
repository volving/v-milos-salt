extends layout
block head

block body
  .container
    #logoFrame
      //- h1.text-center= title
      //- img.logo(src="/assets/images/avatar.png", alt="...")
      .logo

    #search
      form.form-vertical(action="/artwork/manage" method="GET")
        .form-group
          .row
            .col-xs-10.col-sm-8.col-sm-offset-2.col-md-5.col-md-offset-3
              p 请输入作品名称或指纹编号进行检索
          .row
            .col-xs-10.col-sm-8.col-sm-offset-2.col-md-5.col-md-offset-3
              input.form-control#searchInput(type="text" name="searchInput")
              //- placeholder="请输入作品名称或指纹编号进行检索"
            .col-xs-2.col-sm-1.col-xs-3
              button.btn.btn-primary(type="submit") 搜索

    if(user && user.usertype.indexOf('admin') > -1)
      #actions
        .row
          .col-sm-4.col-sm-offset-4.text-center
            .row
              .col-sm-4
                a.btn.btn-primary(href="/cert/create") 创建纸纹
              .col-sm-4.col-sm-push-4
                a.btn.btn-primary(href="/cert/manage") 管理纸纹